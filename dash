    <script>
        // --- Lógica KPI Tabs (Unificados) ---
        function switchKpiTab(evt, tabId) {
            // Remove active class from buttons
            let btns = document.getElementsByClassName("kpi-tab-btn");
            for (let btn of btns) {
                btn.classList.remove("active");
            }
            
            // Hide all content panes
            let panes = document.getElementsByClassName("kpi-content-pane");
            for (let pane of panes) {
                pane.classList.remove("active");
            }

            // Activate clicked
            evt.currentTarget.classList.add("active");
            document.getElementById(tabId).classList.add("active");
        }

        // --- Lógica Tabs Inferiores ---
        function openMainTab(evt, tabName) {
            let tabcontent = document.getElementsByClassName("tab-pane");
            for (let i = 0; i < tabcontent.length; i++) {
                tabcontent[i].classList.remove("active");
            }
            let tablinks = document.getElementsByClassName("tab-btn");
            for (let i = 0; i < tablinks.length; i++) {
                tablinks[i].classList.remove("active");
            }
            document.getElementById(tabName).classList.add("active");
            evt.currentTarget.classList.add("active");
        }

        // --- Lógica Chart (SVG Simples) ---
        document.addEventListener("DOMContentLoaded", () => {
            const svg = document.getElementById('daily-chart');
            const tooltip = document.getElementById('chart-tooltip');
            const data = [42,38,47,52,40,55,60,48,58,50,62,45,53,49,56,44,51,59,46,57,61,43,54,49,58,52,47,55,60,52];
            
            const width = 800; 
            const height = 250;
            const barWidth = (width / data.length) - 5;
            const maxVal = Math.max(...data) + 10;

            // Linhas de Grade
            for(let i=0; i<=4; i++) {
                let y = height - (i * (height/4));
                let line = document.createElementNS("http://www.w3.org/2000/svg", "line");
                line.setAttribute("x1", 0); line.setAttribute("y1", y);
                line.setAttribute("x2", width); line.setAttribute("y2", y);
                line.setAttribute("class", "chart-grid-line");
                svg.appendChild(line);
            }

            // Linha Capacidade (Meta)
            let capY = height - (55 / maxVal * height);
            let capLine = document.createElementNS("http://www.w3.org/2000/svg", "line");
            capLine.setAttribute("x1", 0); capLine.setAttribute("y1", capY);
            capLine.setAttribute("x2", width); capLine.setAttribute("y2", capY);
            capLine.setAttribute("class", "chart-capacity-line");
            svg.appendChild(capLine);

            // Barras
            data.forEach((val, index) => {
                let h = (val / maxVal) * height;
                let x = index * (width / data.length);
                let y = height - h;
                
                let rect = document.createElementNS("http://www.w3.org/2000/svg", "rect");
                rect.setAttribute("x", x);
                rect.setAttribute("y", y);
                rect.setAttribute("width", barWidth);
                rect.setAttribute("height", h);
                rect.setAttribute("class", "chart-bar");
                
                // Tooltip events
                rect.addEventListener('mouseenter', (e) => {
                    tooltip.style.display = 'block';
                    tooltip.textContent = `Dia ${index+1}: ${val} atendimentos`;
                    tooltip.style.left = e.pageX + 10 + 'px';
                    tooltip.style.top = e.pageY - 20 + 'px';
                });
                rect.addEventListener('mouseleave', () => tooltip.style.display = 'none');
                
                svg.appendChild(rect);
            });
        });

        // --- Lógica Novidades (Carrossel Médico) ---
        const newsData = [
            {
                badge: '<i class="fas fa-robot"></i> IA',
                title: 'Diagnóstico via IA',
                desc: 'Ferramenta de suporte à decisão clínica baseada em 1 milhão de casos.',
                img: 'https://lirp.cdn-website.com/c48d9b48/dms3rep/multi/opt/app_heatlh_logo-semtag-199w.png',
                video: false
            },
            {
                badge: '<i class="fas fa-mobile-screen"></i> App',
                title: 'Novo App Paciente',
                desc: 'Pacientes agora podem ver resultados e confirmar presença pelo app.',
                img: 'data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="800" height="450"><rect fill="%23764ba2" width="100%" height="100%"/><text x="50%" y="50%" font-family="Arial" font-size="40" fill="white" dominant-baseline="middle" text-anchor="middle">App Preview</text></svg>',
                video: false
            },
            {
                badge: '<i class="fas fa-video"></i> Telemedicina',
                title: 'Telemedicina 2.0',
                desc: 'Videochamadas HD integradas ao prontuário eletrônico.',
                img: 'data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="800" height="450"><rect fill="%23667eea" width="100%" height="100%"/><text x="50%" y="50%" font-family="Arial" font-size="40" fill="white" dominant-baseline="middle" text-anchor="middle">Video Call</text></svg>',
                video: false
            }
        ];

        let currentNewsIndex = 0;

        function updateNewsContent() {
            const data = newsData[currentNewsIndex];
            document.getElementById('slideDataBadge').innerHTML = data.badge;
            document.getElementById('slideDataTitle').textContent = data.title;
            document.getElementById('slideDataDescription').textContent = data.desc;
            document.getElementById('newsVideoPoster').style.backgroundImage = `url('${data.img}')`;
            
            // Reset indicators
            document.querySelectorAll('.carousel-indicator').forEach((ind, idx) => {
                ind.classList.toggle('active', idx === currentNewsIndex);
            });
        }

        function goToNewsSlide(index) {
            currentNewsIndex = index;
            updateNewsContent();
        }

        // Auto play news
        setInterval(() => {
            currentNewsIndex = (currentNewsIndex + 1) % newsData.length;
            updateNewsContent();
        }, 5000);

        function playVideo() {
            // Simulação de play
            const iframe = document.getElementById('newsVideoIframe');
            const poster = document.getElementById('newsVideoPoster');
            
            poster.style.display = 'none';
            iframe.style.display = 'block';
            // Em produção, aqui setaríamos o src do iframe com autoplay
            iframe.src = "https://www.youtube.com/embed/dQw4w9WgXcQ?autoplay=1&mute=1"; 
        }
    </script>
